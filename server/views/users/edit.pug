extends ../layouts/application.pug

block header
    = t('views.users.edit.title')

block content
    +formFor()(action=route('updateUser', { id: user.id }) method='POST')
        +input(user, 'firstName', t('views.users.firstName'), errors)(type="text")
        +input(user, 'lastName', t('views.users.lastName'), errors)(type="text")
        +input(user, 'email', t('views.users.email'), errors)(type="text")
        +input(user, 'password', t('views.users.password'), errors)(type="text")
        +input(type='hidden' name='_method' value='PATCH')
        +submit(user)(value=t('views.users.edit.submit'))
